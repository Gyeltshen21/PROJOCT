<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdminNotificationAddActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/AdminNotification_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/colorPrimary"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="BackToAdminNotification"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Add New Notification"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="italic" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="From:"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/AdminNotificationSenderName"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:hint="Sender Address"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Date:"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/AdminNotificationDate"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:hint="dd/mm/yyyy"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:textStyle="normal" />

        <Button
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_design"
            android:onClick="ChooseDate"
            android:text="Select Date"
            android:textAllCaps="false"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Time:"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/AdminNotificationTime"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:hint="hh/mm/aa"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:textStyle="normal" />

        <Button
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_design"
            android:onClick="SelectTime"
            android:text="Select Time"
            android:textAllCaps="false"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Message"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/AdminNotificationMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:ems="10"
            android:gravity="start"
            android:inputType="textMultiLine"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:textStyle="normal" />

    </LinearLayout>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/btn_design"
        android:onClick="SendNotification"
        android:text="Send"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textStyle="normal" />

</LinearLayout>